[MASTER]
# Files or directories to be skipped
ignore=CVS,.git,.hg,.svn

# Use multiple processes to speed up Pylint
jobs=0

# Allow loading of arbitrary C extensions
unsafe-load-any-extension=no

# Extension packages with C extensions whitelist
extension-pkg-whitelist=numpy,pandas,torch,cv2

[FORMAT]
# Maximum number of characters on a single line
max-line-length=88

# String used as indentation unit (4 spaces)
indent-string='    '

[MESSAGES CONTROL]
# Disable specific warnings that are too strict for development
disable=
    # Import related
    import-error,
    import-outside-toplevel,
    wrong-import-position,
    wrong-import-order,
    ungrouped-imports,
    
    # Documentation
    missing-module-docstring,
    missing-class-docstring, 
    missing-function-docstring,
    
    # Naming conventions (too strict)
    invalid-name,
    bad-continuation,
    
    # Design issues
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    
    # Code style (handled by black/autopep8)
    line-too-long,
    bad-whitespace,
    
    # Others
    fixme,
    unused-wildcard-import,
    redefined-outer-name,
    consider-using-enumerate,
    consider-using-dict-comprehension,
    consider-using-set-comprehension,
    consider-using-get,
    consider-using-in,
    consider-iterating-dictionary

[TYPECHECK]
# Members that are set dynamically and missed by pylint inference
generated-members=numpy.*,pandas.*,torch.*

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body  
max-locals=25

# Maximum number of return / yield for function / method body
max-returns=8

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=60

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=6

# Ignore comments when computing similarities
ignore-comments=yes

# Ignore docstrings when computing similarities  
ignore-docstrings=yes